<% layout("/layouts/boilerplate") %>

<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <!-- <br> -->
      <!-- <br> -->
      <h3>Add New Listing</h3>
      <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data" >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            placeholder="enter title"
            class="form-control"
            id=""
            required
          />
          <div class="valid-feedback">Title looks good 1</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Descripition</label>
          <textarea
            type="text"
            name="listing[description]"
            placeholder="enter description"
            class="form-control"
            id=""
            required
          ></textarea>
          <div class="invalid-feedback">Enter Description</div>
        </div>

        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input
            
            name="listing[price]"
            placeholder="enter Rupees"
            id=""
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter correct price</div>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Upload Image File</label>
          <input
            type="file"
            name="listing[image]"
            id="image"
            class="form-control"
            required
          />
          <!-- <div class="valid-feedback">Title looks good 1</div> -->
        </div>
        <div class="mb-3">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="listing[country]"
            placeholder="enter Country"
            class="form-control"
            id=""
            required
          />
          <div class="invalid-feedback">Enter a country name valid</div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            placeholder="enter location"
            class="form-control"
            id=""
            required
          />
          <div class="invalid-feedback">Location name should be valid</div>
        </div>

        <button class="btn btn-dark add-btn">Click Add</button>

        <br /><br />
      </form>
    </div>
  </div>
</body>
